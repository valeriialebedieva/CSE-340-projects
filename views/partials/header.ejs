<header id="top-header">
<div class="header-container">
    <span class="siteName">
      <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div id="tools">
        <% if (locals.loggedin) { %>
            <span>Welcome <%= locals.accountData.account_firstname %></span>
            <a title="Manage Account" href="/account/management"
              >Account Management</a
            >
            <a title="Logout" href="/account/logout">Logout</a>
            <% } else { %>
            <a title="Click to log in" href="/account/login">My Account</a>
            <% } %>
    </div>
</div>
</header>